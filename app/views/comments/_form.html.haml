= simple_form_for(Comment.new, html: {class: 'comment-form'}, remote: true) do |f|
  = f.error_notification
  .row
    .col-md-3
      = f.input :name, label: false, placeholder: 'name'
    .col-md-6
      = f.input :content, as: :string, label: false, input_html: {class: 'comment-form__content'}
    .col-md-2
      = f.button :submit, 'POST'
