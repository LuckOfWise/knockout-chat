!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Knouckout Chat'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Knouckout Chat'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    - if request.ssl?
      = javascript_include_tag 'https://d3dy5gmtp8yhk7.cloudfront.net/2.1/pusher.min.js'
    - else
      = javascript_include_tag 'http://js.pusher.com/2.1/pusher.min.js'
    = csrf_meta_tags
  %body
    %header.header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
